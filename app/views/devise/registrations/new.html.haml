%body
  %header.single-header
    %h1
      = link_to "/", class:"" do
        = image_tag 'logo.png'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.active
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          完了
          .progress-status

%h2 会員情報入力
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :nickname,"ニックネーム"
    %br/
    = f.text_field :nickname
  .field
    = f.label :email,"メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :first_name,"お名前全角（性）"
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name,"お名前全角（名）"
    %br/
    = f.text_field :last_name
  .field
    = f.label :first_name_kana,"お名前カナ（セイ）"
    %br/
    = f.text_field :first_name_kana
  .field
    = f.label :last_name_kana,"お名前カナ（ナ）"
    %br/
    = f.text_field :last_name_kana
  .field
    = f.label :year,"生年月日（年）"
    %br/
    = f.text_field :year
  .field
    = f.label :month,"生年月日（月）"
    %br/
    = f.text_field :month
  .field
    = f.label :day,"生年月日（日）"
    %br/
    = f.text_field :day
  .actions
    = f.submit "次へ"
= render "devise/shared/links"
