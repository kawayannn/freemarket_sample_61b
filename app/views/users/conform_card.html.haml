.main-contents
  .single-inner
    %h2.single-inner__head
      クレジットカード情報入力
    %form.card-form
      .card-form__content
        .form-group
          %label(for="card-num")
            カード番号
          %span.form-required
            必須
          %input{name: "card-num", type: "text", placeholder: "半角数字のみ", class: "input-default card-num-input"}
          %ul.card-list
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?35314277', height: '20', width: '49'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?35314277', height: '20', width: '34'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?35314277', height: '20', width: '30'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?35314277', height: '20', width: '32'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?35314277', height: '20', width: '21'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?35314277', height: '20', width: '32'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?35314277', height: '20', width: '32'
        .form-group.expire
          %label(for="card_expire")
            有効期限
          %span.form-required
            必須
          %br/
          .set-select-harf
            %select.select-default(name="card_expire")
              %option.selected(value="")  --
              %option(value="1")  1
              %option(value="2")  2
              %option(value="3")  3
              %option(value="4")  4
              %option(value="10")  10
            %span
              月
          .set-select-harf
            %select.select-default(name="card_expire")
              %option.selected(value="")  --
              %option(value="20")  20
              %option(value="21")  21
              %option(value="22")  22
              %option(value="23")  23
              %option(value="24")  24
            %span
              年
        .form-group
          %label(for="security_code")
            セキュリティコード
          %span.form-required
            必須
          %input{name: "security-code", type: "text", placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default security-code-input"}
          .set-question
            .text
              %span
                ?
              カード裏面の番号とは？
            .answer
        %button.btn.add-card-btn.btn-red.btn-default
          追加する

            
            
